		pagination: false,
		slideSpeed: 1000,
		paginationSpeed: 1000,
		navigationText: ['<i class="fa fa-angle-left" aria-hidden="true"></i>', '<i class="fa fa-angle-right" aria-hidden="true"></i>']
	});
	$('.seen-item .original-price s').each(function() {
		var val = parseInt($(this).html());
